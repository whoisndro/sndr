<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Store Detail</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 20px;
        text-align: center;
      }

      h1 {
        color: #333;
      }

      a {
        color: #007bff;
        text-decoration: none;
        margin: 0 10px;
      }

      form {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      input[type="text"] {
        padding: 8px;
        margin-right: 10px;
      }

      button {
        background-color: #007bff;
        color: #fff;
        padding: 8px;
        cursor: pointer;
      }

      table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fff;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
      }

      th {
        background-color: #007bff;
        color: #fff;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
      }

      .action-links {
        display: flex;
        justify-content: space-around;
      }

      .statistics {
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        margin-bottom: 20px;
      }
      .navbar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        padding: 0px 8px;
      }
      .item {
        padding-right: 12px;
        border-right: 1px solid #000000;
        cursor: pointer;
        text-decoration: none;
        color: #000000;
      }
      .item:hover {
        color: #007bff;
      }
      .item:last-child {
        border-right: none;
      }
      .detail-button-wrapper {
        padding: 24px 6px;
      }
      .detail-button {
        background-color: #86b6f6;
        padding: 8px;
        cursor: pointer;
        color: #ffffff;
        text-decoration: none;
        border-radius: 8px;
      }
      .detail-button:hover {
        background-color: #007bff;
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <% menus.map((el) => { %>
      <a href="/stores/add" class="item"><%= el.option %> </a>
      <% }) %>
    </div>
    <h1><%= store.name %></h1>
    <h2>Code: <%= store.code %></h2>
    <div>
      Click
      <a href="/stores/<%= store.id %>/employees/add">here</a>
      to add an employees
    </div>
    <h3>Employees Fee: <%= formattedTotalSalary %></h3>
    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Education</th>
        <th>Position</th>
        <th>Salary</th>
        <th>Action</th>
      </tr>
      <% employeesWithFormattedSalary.map((el) => { %>
      <tr>
        <td><%= el.firstName %></td>
        <td><%= el.lastName %></td>
        <td><%= el.dateOfBirth %></td>
        <td><%= el.education %></td>
        <td><%= el.position %></td>
        <td><%= el.salary %></td>
        <td class="detail-button-wrapper">
          <a
            href="/stores/<%= store.id %>/employees/<%= el.id %>/edit"
            class="detail-button"
            >Edit</a
          >
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
